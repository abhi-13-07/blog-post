<%- include("./partials/header") -%>
<div class="container">
  <%- include("./partials/message") -%>
  <h2>Recently Added</h2>
  <div class="grid-container-2">
    <% posts.forEach(post => { %>
    <div class="grid">
      <h3><%= post.category %></h3>
      <img height="150px" width="100px" src="<%= post.coverImageLink %>" alt="cover image for <%= post.title %>">
      <h4><%= post.title %></h4>
      <p><%= post.body.slice(0, 120) + " ..." %></p>
      <a href="/posts/<%= post.id %>">View More</a>
      <span><%= post.createdBy.name %></span>
    </div>
    <% }) %>
  </div>
</div>